# Enable URL rewriting
<IfModule mod_rewrite.c>
  RewriteEngine On

  # Redirect all requests to the Next.js app
  # Ensure the request is not for an existing file or directory
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d

  # Route the requests to the entry point (e.g., server.js or Next.js build folder)
  RewriteRule ^(.*)$ /$1 [L]
</IfModule>

# Handle client-side routing
FallbackResource /index.html

# Set caching headers if necessary
<IfModule mod_headers.c>
  Header set Cache-Control "max-age=31536000, public"
</IfModule>
